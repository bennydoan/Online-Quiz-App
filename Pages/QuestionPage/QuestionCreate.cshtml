@page
@model Quiz_Application2.Pages.QuestionPage.QuestionCreateModel
@{
    ViewData["Title"] = "Create Question";
    int index = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/QuestionCreate.css" asp-append-version="true" />
}



<div class="container text-center">
    <h1 class="mb-3">Create, Add, Delete Question For <span class="text-success">@Model.QuizTitle</span> </h1>
</div>



<div class="container border border-primary rounded col-12 col-sm-9 col-md-7 col-lg-6 p-2 mb-5">
    <form method="post">
        <label class="mb-2 fw-bold form-label" asp-for="newQuestion.Text">Question</label>
        <input type="text" class="form-control mb-2" placeholder="Please type your question" asp-for="newQuestion.Text" />
        <span asp-validation-for="newQuestion.Text" class="text-danger"></span>

        

        <label class="mb-2 fw-bold form-label">Answers</label>

        <div class="d-flex justify-content-between">
            <input type="text" class="form-control mb-2 w-55" placeholder="Please type your first answer" />
            <input type="checkbox" class="form-check-input" id="correctAnswer" />
        </div>

        <div class="d-flex justify-content-between">
            <input type="text" class="form-control mb-2" placeholder="Please type your second answer" />
            <input type="checkbox" class="form-check-input" id="correctAnswer" />
        </div>

        <div class="d-flex justify-content-between">
            <input type="text" class="form-control mb-2" placeholder="Please type your third answer" />
            <input type="checkbox" class="form-check-input" id="correctAnswer" />
        </div>

        <div class="d-flex justify-content-between">
            <input type="text" class="form-control mb-2 me-2" placeholder="Please type the fourth answer" />
            <input type="checkbox" class="form-check-input" id="correctAnswer" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">Create</button>
        </div>

    </form>
</div>

<hr />

@foreach(var q in Model.Questions)
{

    <h4>@index. @q.Text</h4>

    
    index++;
}




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



