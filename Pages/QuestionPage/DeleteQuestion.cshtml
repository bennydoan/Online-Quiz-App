@page
@model Quiz_Application2.Pages.QuestionPage.DeleteQuestionModel
@{
    ViewData["Title"] = "Delete Question";
   
}

<h2 class="text-center mb-4">Delete This Question?</h2>

<div class="container border border-primary rounded col-172 col-sm-9 col-md- col-lg-6 p-2 mb-5">
    <form method="post">
        <label class="mb-2 fw-bold form-label" asp-for="newQuestion.Text">Question</label>
        <input type="text" class="form-control mb-2" placeholder="Please type your question" asp-for="newQuestion.Text" />
        <span asp-validation-for="newQuestion.Text" class="text-danger"></span>

        <div class="text-center">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="QuestionCreate" asp-route-id="@Model.newQuestion.QuizId" class="btn btn-secondary">Cancel</a>
        </div>

    </form>
</div>
