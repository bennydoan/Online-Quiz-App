@page
@model Quiz_Application2.Pages.QuizPage.QuizResultsModel
@{
    ViewData["Title"] = "Quiz Results";
}

<div class="container mt-5">
    <h1 class="text-center">Quiz Results</h1>
    <p class="text-center">Here are your quiz results:</p>

    @if (!Model.QuizResults.Any())
    {
        <div class="alert alert-info text-center">
            <p>No quiz results found.</p>
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Quiz Title</th>
                    <th>Score</th>
                    <th>Date Taken</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.QuizResults)
                {
                    <tr>
                        <td>@result.Quiz.Title</td>
                        <td>@result.Score%</td>
                        <td>@result.TakenAt.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a asp-page="QuizIndex" class="btn btn-primary">Back to Quizzes</a>
    </div>
</div>
