@page
@model Quiz_Application2.Pages.QuizPage.QuizzesModel
@{

}

<h2>Create a New Quiz</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="newQuiz.Title">Title</label>
        <input asp-for="newQuiz.Title" class="form-control" />
        <span asp-validation-for="newQuiz.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="newQuiz.Description">Description</label>
        <textarea asp-for="newQuiz.Description" class="form-control"></textarea>
        <span asp-validation-for="newQuiz.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Quiz</button>
</form>

<hr />


<h2 class="mt-5">Existing Quizzes</h2>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model.Quizzes)
        {
            <tr>
                <td>@quiz.Id</td>
                    <td>@quiz.Title</td>
                    <td>@quiz.Description</td>
                    <td>
                        <a asp-page="./QuizDetails" asp-route-id="@quiz.Id" class="btn btn-info">View</a>
                        <a asp-page="./EditQuiz" asp-route-id="@quiz.Id" class="btn btn-warning">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@quiz.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
         }
    </tbody>
       
</table>

        
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

